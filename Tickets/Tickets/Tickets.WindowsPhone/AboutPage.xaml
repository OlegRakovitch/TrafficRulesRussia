<Page
    x:Class="Tickets.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tickets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <local:BackgroundGrid/>
        
        <Grid x:Name="mainGrid"
              Margin="10">
            <Grid.Resources>
                <Style x:Key="textBlockStyle" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="Brown"/>
                    <Setter Property="FontFamily" Value="Comic Sans MS"/>
                </Style>
                <Style x:Key="captionStyle" TargetType="TextBlock" BasedOn="{StaticResource textBlockStyle}">
                    <Setter Property="FontSize" Value="23"/>
                </Style>
                <Style x:Key="pageCaptionStyle" TargetType="TextBlock" BasedOn="{StaticResource textBlockStyle}">
                    <Setter Property="FontSize" Value="28" />
                </Style>
                <Style x:Key="elementStyle" TargetType="TextBlock" BasedOn="{StaticResource textBlockStyle}">
                    <Setter Property="FontSize" Value="18"/>
                </Style>
                <Style x:Key="buttonStyle" TargetType="Button">
                    <Setter Property="Foreground" Value="Brown"/>
                    <Setter Property="FontSize" Value="25"/>
                    <Setter Property="FontFamily" Value="Comic Sans MS"/>
                    <Setter Property="BorderBrush" Value="Brown"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="Имя приложения"
                HorizontalAlignment="Center"
                Style="{StaticResource pageCaptionStyle}"/>

            <StackPanel Grid.Row="1">
                <TextBlock
                    Text="Разработчики"
                    HorizontalAlignment="Center"
                    Style="{StaticResource captionStyle}"/>
                <TextBlock
                    Margin="0,20,0,0"
                    Text="Кривченко Роман"
                    Style="{StaticResource elementStyle}"/>
                <TextBlock
                    Text="github.com/febonachi"
                    Style="{StaticResource elementStyle}"/>
                <TextBlock
                    Margin="0,20,0,0"
                    Text="Ракович Олег"
                    Style="{StaticResource elementStyle}" />
                <TextBlock
                    Text="github.com/OlegRakovitch" 
                    Style="{StaticResource elementStyle}"/>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBlock 
                    Style="{StaticResource captionStyle}"
                    HorizontalAlignment="Center"
                    Text="Используемые материалы"/>
                <TextBlock
                    Margin="0,20,0,0"
                    Style="{StaticResource elementStyle}"
                    TextWrapping="WrapWholeWords">
                    Вся информация, в том числе текстовое и графическое содержимое ПДД, билетов экзамена ПДД, знаков дорожного движения и дорожной разметки, предоставлена сайтом am.ru
                </TextBlock>
            </StackPanel>
            
            <Button Grid.Row="3"
                Style="{StaticResource buttonStyle}" Tapped="Button_Tapped">
                Главное меню
            </Button>
        </Grid>
    </Grid>
</Page>
